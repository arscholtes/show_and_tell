<h1>New message to <%= @receiver.name %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
  <link href="http://www.webpagefx.com/tools/emoji-cheat-sheet/"Emoji></link>
<% end %>
